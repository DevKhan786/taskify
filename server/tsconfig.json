{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["*.ts", "controllers/**/*.ts", "models/**/*.ts", "routes/**/*.ts", "lib/**/*.ts"],
  "exclude": ["node_modules"]
}
